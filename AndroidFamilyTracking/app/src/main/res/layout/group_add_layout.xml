<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Grup"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/GroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Masukkan Nama Grup"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <Button
        android:id="@+id/CreateGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buat Grup Baru"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Code Grup"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/GroupCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Masukkan Kode Grup"
        android:textSize="24sp" />

    <Button
        android:id="@+id/JoinGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bergabung ke Grup"
        android:textSize="18sp" />
</LinearLayout>